<Window x:Class="Projekt_kurier.CourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CourierWindow" Height="621.5" Width="600" MinHeight="321.5" MinWidth="300" MaxHeight="621.5" MaxWidth="600"
        WindowStartupLocation="CenterScreen" SizeChanged="SqareResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Click="ParcelList" Style="{StaticResource CourierWindowParcelsList}" ToolTip="Wyświetl listę przesyłek">Lista przesyłek</Button>
        <Button Grid.Column="1" Click="CourierRankList" Style="{StaticResource CourierWindowCouriersRanking}" ToolTip="Otwórz ranking kurierów">Ranking Kurierów</Button>
        <Button Grid.Row="1" Click="ChangeLoginData" Style="{StaticResource CourierWindowChangeLogin}" ToolTip="Zmień dane logowania">Zmień dane logowania</Button>
        <Button Grid.Row="1" Grid.Column="1" Click="Logout" Style="{StaticResource Logout}" ToolTip="Wyloguj">Logout</Button>
    </Grid>
</Window>
