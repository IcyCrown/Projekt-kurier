<Window x:Class="Projekt_kurier.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeStatusWindow" Height="100" Width="350" MinHeight="100" MinWidth="350" MaxHeight="110" MaxWidth="350"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Click="SetPackageDelivered" Name="PackageDeliveredButton" Height="50" Margin="2.5" Style="{StaticResource GreenButtonStyle}">Dostarczono</Button>
        <Button Click="SetPackageAssigned"  Name="PackageAssignedButton" Height="50" Grid.Column="1" Margin="2.5" Style="{StaticResource OrangeButtonStyle}">W trakcie</Button>
        <Button Click="SetPackageCancelled" Name="PackageCancelledButton" Height="50" Grid.Column="2" Margin="2.5" Style="{StaticResource RedButtonStyle}">Anulowano</Button>
    </Grid>
</Window>
